            android:keyLabel="F" />
        <Key
            android:keyWidth="20%p"
            android:codes="103"
            android:keyLabel="G" />
    </Row>

    <!-- Row 3: ZXCV, Space, Enter -->
    <Row>
        <Key
            android:keyWidth="20%p"
            android:codes="122"
            android:keyLabel="Z" />
        <Key
            android:keyWidth="20%p"
            android:codes="120"
            android:keyLabel="X" />
        <Key
            android:keyWidth="20%p"
            android:codes="99"
            android:keyLabel="C" />
        <Key
            android:keyWidth="20%p"
            android:codes="118"
            android:keyLabel="V" />
        <Key
            android:keyWidth="20%p"
            android:codes="98"
            android:keyLabel="B" />
    </Row>

    <!-- Row 4: Space and Enter -->
    <Row>
        <Key
            android:codes="32"
            android:keyWidth="50%p"
            android:keyLabel="Space" />
        <Key
            android:codes="10"
            android:keyWidth="50%p"
            android:keyLabel="Enter" />
    </Row>
</Keyboard>
