<!-- res/xml/qwerty.xml -->
<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    android:horizontalGap="4px"
    android:keyWidth="10%p"
    android:keyHeight="60dp"
    android:verticalGap="4px">

    <!-- Row One -->
    <Row>
        <Key
            android:codes="2437"
            android:keyEdgeFlags="left"
            android:keyLabel="অ" />
        <Key
            android:codes="2438"
            android:keyLabel="আ" />
        <Key
            android:codes="2439"
            android:keyLabel="ই" />
