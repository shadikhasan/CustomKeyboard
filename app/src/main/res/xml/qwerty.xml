            android:codes="113"
            android:keyLabel="Q" />
        <Key
            android:popupKeyboard="@xml/popup_key_w"
            android:popupCharacters="2"
            android:keyWidth="20%p"
            android:codes="119"
            android:keyLabel="W" />
        <Key
            android:popupCharacters="3"
            android:keyWidth="20%p"
            android:codes="101"
            android:keyLabel="E" />
        <Key
            android:keyWidth="20%p"
            android:codes="114"
            android:keyLabel="R" />
        <Key
            android:keyWidth="20%p"
            android:codes="116"
            android:keyLabel="T" />
    </Row>

    <!-- Row 2: ASDFG -->
    <Row>
        <Key
            android:keyWidth="20%p"
            android:codes="97"
            android:keyLabel="A" />
        <Key
            android:keyWidth="20%p"
            android:codes="115"
            android:keyLabel="S" />
        <Key
            android:keyWidth="20%p"
            android:codes="100"
            android:keyLabel="D" />
        <Key
            android:keyWidth="20%p"
